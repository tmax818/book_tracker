<header class="navbar navbar-fixed-top navbar-inverse">
<div class="container">
<%= link_to "Library Tracker", root_path, id: "logo" %>
<nav>
  <ul class="nav navbar-nav navbar-right">
    <li><%= link_to "Books by Author",  books_by_author_path %></li>
    <li><%= link_to "Books by Title",   books_by_title_path %></li>
    <% if logged_in? %>
    <li><%= link_to "User Home", user_path(current_user.id)%></li>
    <li><%= link_to "Log out", logout_path, method: :delete, class: "btn btn-lg btn-default" %></li>
    <% else %>
    <li><%= link_to "Log in", login_path %></li>
    <li><%= link_to "Sign up", signup_path, class: "btn btn-lg btn-default" %></li>
    <% end %>
  </ul>
</nav>
</div>
</header>
